<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>
<div class="container-fluid bg-3 text-center">    
  
<form id="productForm" action="/products/<%=product._id%>/update?_method=PUT" method="POST" class="ui form">
    <div class="field">
        <label> Name: </label>
        <input type="text" name="name" placeholder="name" value='<%=product.name%>'>
    </div>

    <div class="field">
            <label> Price: </label>
            <input type="text" name="price" placeholder="price" value='<%=product.price%>'>
     </div>

    <input id="UpdateButton" type="submit" class="button" value="Update">
    <input id="DeleteButton" type="submit" class="button" value="Delete">
    
</form>

<script>
$("#UpdateButton").click(function() {

$("#productForm").attr('action', "/products/<%=product._id%>/update?_method=PUT");

});
$("#DeleteButton").click(function() {

    $("#productForm").attr('action', "/products/<%=product._id%>/delete?_method=DELETE");
 
});

</script>



</div>

<div>
    <span><%=currentPage%></span>
    <span><%=pages%></span>
    
</div>

</body>
<% include partials/script %>
</html>