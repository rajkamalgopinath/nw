<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>
<div class="container-fluid bg-3 text-center">    
  

  
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            ID
        </th>
    </tr>

<%products.forEach((product)=> {%>
 
  <tr>
    <td>
        <%=product.name%>
    </td>
    <td>
        <a href='/products/<%=product._id%>'>Edit</a>
    </td>
  
  </tr>

<% })%> 

</table>



</div>

<a href="/products/create">Create New</a>


<div>
    <span><%=currentPage%></span>
    <span><%=totalPages%></span>

    
    <a href="/products/list/<%=(currentPage==1) ? 1 : (currentPage-1) %>"><<</a>

    <% for(var i=0; i<3;i++)  { %>

        <%if((totalPages-currentPage)>=3) { %>
            <a href="/products/list/<%=(currentPage+i) %>"><%= (currentPage+i) %></a>
        <%} else {%>
            <a href="/products/list/<%=(totalPages-i) %>"><%= (totalPages+i) %></a>
        <% } %>


    <% } %>


    <a href="/products/list/<%=(currentPage==totalPages) ? totalPages : (currentPage+1) %>">>></a>
     
</div>

</body>
<% include partials/script %>
</html>